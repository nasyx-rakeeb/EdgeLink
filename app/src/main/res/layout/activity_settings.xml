<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Enable Edge Sidebar" android:textSize="18sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Show handle on screen edge" android:textSize="13sp" android:alpha="0.6" android:textColor="?android:attr/textColorSecondary"/>
                </LinearLayout>

                <Switch android:id="@+id/master_switch" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Management"
                    android:textColor="?android:attr/colorAccent"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_pin_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pin Apps to Top"
                    android:backgroundTint="?android:attr/colorAccent"
                    android:textColor="?android:attr/textColorPrimaryInverse"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position &amp; Layout"
                    android:textColor="?android:attr/colorAccent"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/position_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="20dp">
                    <RadioButton android:id="@+id/radio_left" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="Left Edge" android:background="?android:attr/selectableItemBackground" android:gravity="center_vertical"/>
                    <RadioButton android:id="@+id/radio_right" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:text="Right Edge" android:background="?android:attr/selectableItemBackground" android:gravity="center_vertical"/>
                </RadioGroup>

                <TextView android:text="Vertical Position" android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar android:id="@+id/vertical_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:paddingVertical="12dp" android:layout_marginBottom="8dp"/>

                <TextView android:text="Panel Height" android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar android:id="@+id/panel_height_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:paddingVertical="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handle Appearance"
                    android:textColor="?android:attr/colorAccent"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"/>

                <TextView android:text="Handle Opacity" android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar android:id="@+id/handle_opacity_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255" android:paddingVertical="12dp" android:layout_marginBottom="8dp"/>

                <TextView android:text="Panel Background Opacity" android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar android:id="@+id/panel_opacity_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255" android:paddingVertical="12dp" android:layout_marginBottom="8dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                         <TextView android:text="Handle Width" android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                         <SeekBar android:id="@+id/width_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:paddingVertical="12dp"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                         <TextView android:text="Handle Height" android:textSize="14sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                         <SeekBar android:id="@+id/height_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:paddingVertical="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EdgeLink v1.0 â€¢ System Service"
                android:gravity="center"
                android:alpha="0.4"
                android:textSize="12sp"
                android:padding="12dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
